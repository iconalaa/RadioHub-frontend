{% extends "back.html.twig" %}

{% block title %}RadioHub | Appointment{% endblock %}

{% block body %}
<br><br><br><br><br><br><br><br><br>

<div class="container text-center" >
    <div class="row justify-content-center">
        <div class="col-md-8">
            <h1>Appointment Details</h1>
            <br><br>
            <div class="card">
                    <p class="card-text"><strong>Last Name:</strong> {{ rendez_vou.user.lastname }}</p>
                    <p class="card-text"><strong>First Name:</strong> {{ rendez_vou.user.name }}</p>
                    <p class="card-text"><strong>Room:</strong> {{ rendez_vou.salle.numSalle }}</p>
                    <p class="card-text"><strong>Date:</strong> {{ rendez_vou.dateRV ? rendez_vou.dateRV|date('Y-m-d') : '' }}</p>
                    <p class="card-text"><strong>Type Exam:</strong> {{ rendez_vou.typeExam }}</p>
                    <br><br><br><br>
                </div>
            </div>
        </div>
    </div>
    <br><br><br><br><br><br>
    <div class="row mt-3 justify-content-center">
        <div class="col-md-8">
            <!-- Additional content can be added here -->
            <!-- For example, you can add a message or other information -->
            <div class="alert alert-info" role="alert">
                Need help or have questions? Contact our support team at support@radiohub.com.
            </div>
        </div>
    </div>
</div>

{% endblock %}
