{% block body %}
    <h1 class="display-4 text-center my-4">{{ article.title }}</h1>
    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ article.id }}</td>
            </tr>
            <tr>
                <th>Title</th>
                <td>{{ article.title }}</td>
            </tr>
            <tr>
                <th>Content</th>
                <td>{{ article.content }}</td>
            </tr>
            <tr>
                <th>Image</th>
                <td>
                    {{ article.image }}
                    <img src="{{ asset('articles/' ~ article.image) }}" class="card-img-top" alt="...">
