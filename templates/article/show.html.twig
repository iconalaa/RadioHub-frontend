{% extends "back.html.twig" %}

{% block title %}
    Blog Details
{% endblock %}

{% block body %}
<br>
<br>
<br>
<div class="container mt-4">
    <div class="row">
        <div class="col-md-7 offset-md-2">
            <div class="card">
                <div class="card-body">
                    <h5 class="card-title">{{ article.title }}</h5>
                    <div class="description">
                        <p class="card-text" style="margin-bottom: 20px;">{{ article.content }}</p>
                    </div>
                    <div class="image-container d-flex justify-content-center">
                        <img src="{{ asset('articles/' ~ article.image) }}" class="card-img-top" alt="Article Image" style="width: 70%;">
                    </div>
                    <p class="mt-2">Created At: {{ article.createdAt ? article.createdAt|date('Y-m-d H:i:s') : '' }}</p>
                    <p>Comment Count: {{ commentCount }}</p>
                    <div class="mt-4 text-center">
                        <a href="{{ path('app_article_index') }}" class="btn btn-secondary">Back to list</a>
                        <a href="{{ path('app_article_edit', {'id': article.id}) }}" class="btn btn-primary">Edit</a>
                        {{ include('article/_delete_form.html.twig') }}
                    </div>
                </div>
            </div>
        </div>
    </div>
    
</div>

{% endblock %}
