{% extends 'front.html.twig' %}

{% block title %}RadioHub | Blog{% endblock %}

{% block body %}
<style>
    .all-blog {
        display: grid;
        grid-template-columns: repeat(3, 350px);
        gap: 1.5rem;
        width: 80%;
        margin: 5rem auto;
    }
    .blog img {
        height: 200px;
        object-fit: cover;
        border-radius: 8px;
    }
    .blog:hover img {
        transform: scale(1.1);
    }
    .blog {
        background-color: #d9d9d9;
        padding: 20px;
        border-radius: 8px;
        box-shadow: 0 0 10px rgba(0, 0, 0, 0.2);
    }

    .card-title {
        color: black;
        text-transform: capitalize;
        font-size: 30px;
    }
    .btn {
        color: white !important;
    }
</style>

<h1 class="display-3 text-center mt-3">Blogs</h1>

<!-- Center the search form -->
<div class="container-fluid">
    <div class="row justify-content-center mt-5">
        <div class="col-md-6">
            <form action="{{ path('app_blog') }}" method="GET" class="d-flex">
                <div class="form-group mx-sm-3 mb-2 flex-grow-1">
                    <input type="text" name="q" placeholder="Search..." class="form-control px-3 py-2"/>
                </div>
                <button type="submit" class="btn btn-primary">Search</button>
            </form>
        </div>
    </div>
</div>

<!-- Center the blog content -->
<div class="container-fluid">
    <div class="row justify-content-center">
        <div class="col-md-10">
            <div class="all-blog">
                {% for article in articles %}
                    <div>
                        <a href="{{ path('app_blog_suivi', { id: article.id }) }}">
                            <div class="blog">
                                <div style="overflow: hidden">
                                    <img src="{{ asset('articles/' ~ article.image) }}" class="card-img-top" alt="..."/>
                                </div>

                                <div class="d-flex align-items-center justify-content-between w-100">
                                    <h1 class="card-title text-center my-2">{{ article.title }}</h1>
                                    <p class="card-text fs-1" style="color: #000">
                                        {{ article.createdAt | date('Y-m-d') }}
                                    </p>
                                </div>
                                <p class="card-text over" style="white-space:nowrap;overflow:hidden">{{ article.content }}</p>
                                <div class="d-flex align-items-center justify-content-between w-100 mt-3">
                                    <b style="color: #222">
                                        Likes:
                                        {{ articleLikes[article.id] ?? 0 }} <!-- Display the likes for the specific article -->
                                    </b>
                                    {% if article.id in favorites %}
                                        <a href="{{ path('toggle_favorite', { id: article.id }) }}" class="btn">
                                            <i class="fa-solid fa-heart"></i>
                                        </a>
                                    {% else %}
                                        <a href="{{ path('toggle_favorite', { id: article.id }) }}" class="btn">
                                            <i class="fa-regular fa-heart"></i>
                                        </a>
                                    {% endif %}
                                </div>
                            </div>
                        </a>
                    </div>
                {% endfor %}
            </div>
        </div>
    </div>
</div>

{{ knp_pagination_render(articles) }}
{% endblock %}
