{% extends 'front.html.twig' %}

{% block title %}Blog{% endblock %}

{% block body %}
<div class="container mt-4">

    <div class="row">
        <div class="col-md-8 offset-md-2">
            <div class="card mb-4">
                <img src="{{ asset('articles/' ~ articles.image) }}" class="card-img-top" alt="{{ articles.title }}" style="width: 100%;">
                <div class="card-body">
                    <h1 class="card-title">{{ articles.title  }}</h1>
                    <p class="card-text">{{ articles.content   }}</p>
                    <p class="card-text text-muted">{{ articles.createdAt | date('Y-m-d') }}</p>
                </div>
                
            </div>
            {% if user is empty%}
            {%else %}
            <div class="row">
                <div class="col-md-12">
                    <div class="card mb-4">
                        <div class="card-body">
                            {{ form_start(comment) }}
                            {{ form_row(comment.content, {"attr": {"placeholder": "Enter your comment"}, "label": false}) }}
                            <button type="submit" class="btn btn-primary mt-3">PublishÂ²</button>
                            {{ form_end(comment) }}
                        </div>
                    </div>
                </div>
            </div>
            {% endif %}

            <div class="row">
                <div class="col-md-12" style="margin-bottom: 500px;">
					<h5 class="card-title display-4 text-center">Comments</h5> 

                    {% if existingComments is not empty %}
                        <div class="card mb-4">
                            <div class="card-body">
                                <ul class="list-unstyled">
                                    {% for comment in existingComments %}
                                        <li class="mb-3">
                                            <p class="mb-1">{{ comment.content }}</p>
                                            <small class="text-muted">{{ comment.createdAt | date('Y-m-d H:i') }}</small>
                                            {% if replyForms[comment.id] is defined %}
                                                
                                            {% endif %}
                                        </li>
                                    {% endfor %}
                                </ul>
                            </div>
                        </div>
                    {% endif %}
                </div>
            </div>
        </div>
    </div>
</div>
{% endblock %}