                                <i class='far fa-circle' style='font-size:10px'></i>
                                <i class='far fa-circle' style='font-size:20px'></i>
                                <i class='far fa-circle' style='font-size:10px'></i>

                            </button>



                            <button value="contrast" onclick="FreehandRoiTool()" class="tool-btn" id="rotate">
                                <i class="fa fa-solid fa-pen"></i>
                            </button>

