                                <i class="fa-sharp fa-solid fa-pen-ruler"></i>




                            </button>

                            <button value="contrast" onclick="DragProbeTool()" class="tool-btn" id="rotate">

                                <i class="fa fa-solid fa-record-vinyl"></i>

