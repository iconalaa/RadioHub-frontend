{% extends 'back.html.twig' %}

{% block title %} RadioHub - Show Donation {% endblock %} 

{% block body %}
<br>
<br>
<br><br><br><br><br>
<div class="container text-center">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <h1>Donation Information</h1>

            <div class="card">
                <div class="card-body">
                    <h5 class="card-title">Name: {{ gratification.TitreGrat }}</h5>
                    <p class="card-text"><strong>Date:</strong> {{ gratification.DateGrat ? gratification.DateGrat|date('Y-m-d') : '' }}</p>
                    <p class="card-text"><strong>Title:</strong> {{ gratification.TitreGrat }}</p>
                    <p class="card-text"><strong>Description:</strong> {{ gratification.DescGrat }}</p>
                    <p class="card-text"><strong>Type:</strong> {{ gratification.TypeGrat }}</p>
                    <p class="card-text"><strong>Amount:</strong> {{ gratification.Montant }}</p>

                    <div class="mt-3">
                        <a href="{{ path('app_gratification_index') }}" class="btn btn-secondary">Back to List</a>

                        <a href="{{ path('app_gratification_edit', {'id': gratification.id}) }}" class="btn btn-primary">Edit</a>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <div class="row mt-3 justify-content-center">
        <div class="col-md-8">
            <!-- Additional content can be added here -->
            <!-- For example, you can add a message or other information -->
            <div class="alert alert-info" role="alert">
                Need help or have questions? Contact our support team at support@radiohub.com.
            </div>
        </div>
    </div>
</div>
{% endblock %}
