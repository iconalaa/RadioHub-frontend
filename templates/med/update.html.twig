{% extends 'front.html.twig' %} {% block footer %} {% endblock%} {% block
stylesheets %}

{% endblock %} {% block body %}

<div class="container" style="justify-content: center; margin-top: 200px;">
  <h2 class="text-center mt-0 mb-4">DOCTORâ€™S DECISION</h2>

  <div class="row justify-content-center">
    {# New container #}
    <div class="col-md-8">
      {# Adjust the width as needed #}
      {{ form_start(form) }}
      <div class="d-flex gap-3">
        <div>
          <img
            src="{{ asset('uploads/images/' ~ idimage ~ '.png') }}"
            id="dimage"
            alt="Your Image"
          />
        </div>
        <div
          class="w-100 form-group{% if form.interpretationMed.vars.errors|length > 0 %} has-error{% endif %}"
        >
          {{ form_widget(form.interpretationMed, {'attr': {'class': 'form-control h-100 w-100','placeholder':'Interpretation'











          }}) }} {% if form_errors(form.interpretationMed) %}

          <div class="text-danger">
            {{ form_errors(form.interpretationMed) }}
          </div>
          {% endif %}
        </div>
      </div>

      <div
        class="mt-3 form-group{% if form.date.vars.errors|length > 0 %} has-error{% endif %}"
      >
        {{ form_widget(form.date, {'attr': {'class': 'form-control'}}) }} {% if
        form_errors(form.date) %}
        <div class="text-danger">
          {{ form_errors(form.date) }}
        </div>
        {% endif %}
        <center>
          <button type="submit" class="btn btn-primary mt-2 w-25">Save</button>
        </center>
      </div>

      {{ form_end(form) }}
    </div>
  </div>
</div>
{% endblock %}
