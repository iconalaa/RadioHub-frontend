{% extends 'front.html.twig' %} 

{% block footer %} 
{% endblock %}

{% block stylesheets %}
{% endblock %}

{% block body %}

<style>
  body {
    background-image: url('../image/background-image.jpg');
    background-size: cover;
    background-position: center;
    background-repeat: no-repeat;
    background-attachment: fixed;
  }

  .container {
    background: rgba(255, 255, 255, 0.8); 
    padding: 20px;
    border-radius: 15px;
  }
</style>
<div class="container" style="margin-top: 200px;">
  <div class="row justify-content-center">
    <div class="col-md-6">
      {{ form_start(form) }}

      <h2 class="mt-0 mb-4 text-center">DOCTORâ€™S DECISION</h2>

      <div class="form-group{% if form.interpretationMed.vars.errors|length > 0 %} has-error{% endif %}">
        {{ form_widget(form.interpretationMed, {'attr': {'class': 'form-control', 'placeholder': 'Interpretation'}}) }} 
        {% if form_errors(form.interpretationMed) %}
        <div class="text-danger">
          {{ form_errors(form.interpretationMed) }}
        </div>
        {% endif %}
      </div>

      <div class="form-group{% if form.date.vars.errors|length > 0 %} has-error{% endif %}">
        {{ form_widget(form.date, {'attr': {'class': 'form-control'}}) }} 
        {% if form_errors(form.date) %}
        <div class="text-danger">
          {{ form_errors(form.date) }}
        </div>
        {% endif %}
      </div>

      <div class="text-center">
        <button type="submit" class="btn btn-primary mt-2">Save</button>
      </div>

      {{ form_end(form) }}
    </div>

    <div class="col-md-5">
      <img src="{{ asset('uploads/images/' ~ idimage ~ '.png') }}" id="dimage" alt="Your Image" style="width: 500px; height: 400px; border-radius: 10px;"> 
    </div>
  </div>
</div>
{% endblock %}
