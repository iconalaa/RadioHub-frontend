{% extends 'front.html.twig' %}
{% block footer %}{% endblock %}
{% block title %}
Radiohub | Doctor
{% endblock %}
{% block body %}

<style>
  body {
    background-image: url('../image/background-image.jpg');
    background-size: cover;
    background-position: center;
    background-repeat: no-repeat;
    background-attachment: fixed;
  }

  .form-container {
    background: rgba(255, 255, 255, 0.8); /* White background with some transparency */
    padding: 20px;
    border-radius: 15px;
  }

  h2 {
    color: #0047AB;
    margin-bottom: 20px;
    text-align: center;
    font-family: 'Georgia, serif', sans-serif;
  }

  img {
    border-radius: 15px;
  }
</style>

<div class="container" style="margin-top: 150px;">
  <div class="row justify-content-center mt-5">
    <div class="col-lg-10 col-md-12 form-container">
      <div class="row">
        <div class="col-md-6">
          <h2>RADIOLOGIST FORM</h2>

          {{ form_start(form, {'attr': {'novalidate': 'novalidate'}}) }}

          <div class="d-flex flex-column mb-3">
            <label class="inputs" for="{{ form.interpretation_rad.vars.id }}">Final Interpretation:</label>
            {{ form_widget(form.interpretation_rad, {'attr': {'class': 'form-control'}}) }}

            {% if form_errors(form.interpretation_rad) %}
            <div class="text-danger">
              {{ form_errors(form.interpretation_rad) }}
            </div>
            {% endif %}
          </div>

          <div class="d-flex flex-column mb-3">
            <label class="inputs" for="{{ form.doctor.vars.id }}">Assign to Doctor:</label>
            {{ form_widget(form.doctor, {'attr': {'class': 'form-control select2'}}) }}

            {% if form_errors(form.doctor) %}
            <div class="text-danger">
              {{ form_errors(form.doctor) }}
            </div>
            {% endif %}
          </div>

          <div class="form-group">
            <button type="submit" class="btn btn-primary btn-submit mt-3 w-100">Save</button>
          </div>

          {{ form_end(form) }}
        </div>

        <div class="col-md-6 d-flex align-items-center" style="margin-top: 50px;">
          <img src="../image/bg-doc-rad.jpg" alt="Radiology" class="img-fluid mx-auto">
        </div>
      </div>
    </div>
  </div>
</div>

<script>
  // Activate select2 plugin for select inputs
  $(document).ready(function () {
    $('.select2').select2();
  });
</script>

{% endblock %}
