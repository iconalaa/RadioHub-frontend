{% extends 'front.html.twig' %}
{% block title %}RadioHub | Sign{% endblock %}

{% block body %}

<style>
  ul li {
    color: rgba(255, 0, 0, 0.8);
  }
  .list li {
    color: #222 !important;
  }
  .sign-container {
    height: 400px;
  }
  input {
    font-size: 15px !important;
  }
</style>
<center>
  <h1 class="display-5">Doctor</h1>
</center>
<div class="d-flex justify-content-center gap-5 sign-container my-5">
  <img
    class="img-fluid sign-img"
    src="../../front/img/sign/doctor-sign-img.jpeg"
    alt="doctor-sign-img"
  />
  {{ form_start(form,{'attr':{'novalidate': 'novalidate','class':'my-5'}} )}}
  <div class="d-flex flex-column w-100 mx-auto gap-3">
    <div class="d-flex gap-3">
      <div class="d-flex flex-column w-50">
        {{ form_widget(form.user.name,{'attr':{'class':'form-control px-3 py-2'



        }}) }}

        {{ form_errors(form.user.name) }}
      </div>
      <div class="d-flex flex-column w-50">
        {{ form_widget(form.user.lastname,{'attr':{'class':'form-control px-3 py-2'







        }}) }} {{ form_errors(form.user.lastname) }}
      </div>
    </div>
    <div class="d-flex gap-3">
      <div class="d-flex flex-column w-50">
        {{ form_widget(form.user.email,{'attr':{'class':'form-control px-3 py-2'







        }}) }}
        {{ form_errors(form.user.email) }}
      </div>
      <div class="d-flex flex-column w-50">
        {{ form_widget(form.user.password,{'attr':{'class':'form-control px-3 py-2'







        }}) }}
        {{ form_errors(form.user.password) }}
      </div>
    </div>
    <div class="d-flex flex-column w-50">
      {{ form_widget(form.doctor.matricule,{'attr':{'class':'form-control px-3 py-2'







      }}) }}
      {{ form_errors(form.doctor.matricule) }}
    </div>
    <div class="d-flex gap-3">
      <div class="d-flex flex-column">
        {{ form_widget(form.user.gender) }}
        {{ form_errors(form.user.gender) }}
      </div>
      {{ form_widget(form.user.date_birth,{'attr':{'class':'d-flex gap-1 justify-content-center'







      }}) }}
    </div>

    <div style="display: none">
      {{ form_widget(form.doctor.user) }}
    </div>
    <button type="submit" class="btn w-50 mx-auto">Submit</button>
  </div>
  {{ form_end(form) }}
</div>

{% endblock %} 
{% block footer %} {% endblock %}
