{% extends 'back.html.twig' %}

{% block title %} RadioHub - Donor {% endblock %} 

{% block body %}
<br>
<br>
<br><br><br><br><br>
<div class="container text-center">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <h1>Donor Information</h1>

            <div class="card">
                <div class="card-body">
                    <h5 class="card-title">Name: {{ donateur.NomDonateur }}</h5>
                    <p class="card-text"><strong>First Name:</strong> {{ donateur.PrenomDonateur }}</p>
                    <p class="card-text"><strong>Donor Type:</strong> {{ donateur.TypeDonateur }}</p>
                    <p class="card-text"><strong>Email:</strong> {{ donateur.Email }}</p>
                    <p class="card-text"><strong>Phone:</strong> {{ donateur.Telephone }}</p>

                    <div class="mt-3">
                        <a href="{{ path('app_donateur_index') }}" class="btn btn-secondary">Back to List</a>

                        <a href="{{ path('app_donateur_edit', {'id': donateur.id}) }}" class="btn btn-primary">Edit</a>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <div class="row mt-3 justify-content-center">
        <div class="col-md-8">
            <!-- Additional content can be added here -->
            <!-- For example, you can add a message or other information -->
            <div class="alert alert-info" role="alert">
                Need help or have questions? Contact our support team at support@radiohub.com.
            </div>
        </div>
    </div>
</div>
{% endblock %}
